{
  "name": "vscode-corvid",
  "displayName": "Corvid",
  "description": "The extension to work with corvid-cli. Highlighting .jsw, support jobs.config, autocomplete, snippets.",
  "version": "2.1.0",
  "publisher": "shoonia",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "start": "rollup -c -w",
    "build": "rollup -c",
    "dist": "yarn build && vsce publish",
    "test": "jest tests/**/*.test.ts"
  },
  "main": "./dist/extension.js",
  "icon": "icons/logo.png",
  "activationEvents": [
    "workspaceContains:.corvid/corvidrc.json",
    "workspaceContains:**/*.jsw",
    "workspaceContains:jobs.config"
  ],
  "contributes": {
    "commands": [],
    "configuration": [
      {
        "title": "Corvid",
        "properties": {
          "corvid.autocomplete.$w": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "description": "on/off autocomplete for $w() selectors"
          },
          "corvid.autocomplete.import": {
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "description": "on/off autocomplete for import Wix modules"
          },
          "corvid.autocomplete.jsw": {
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "description": "on/off autocomplete for Corvid web modules"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".jsw"
        ]
      },
      {
        "id": "jsonc",
        "extensions": [
          "jobs.config"
        ]
      },
      {
        "id": "json",
        "extensions": [
          ".wix"
        ]
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/imports.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "jobs.config",
        "url": "./schema/jobs.config-schema.json"
      }
    ]
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.47.0",
    "vsce": "^1.77.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.8",
    "@types/jest-json-schema": "^2.1.2",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-json-schema": "^2.1.0",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shoonia/vscode-corvid.git"
  },
  "bugs": {
    "url": "https://github.com/shoonia/vscode-corvid/issues"
  },
  "keywords": [
    "wix",
    "corvid",
    "corvid-cli",
    "wixcode"
  ],
  "author": {
    "name": "Alexander Zaytsev",
    "email": "alexanderz@wix.com",
    "url": "https://twitter.com/_shoonia"
  },
  "license": "MIT"
}
