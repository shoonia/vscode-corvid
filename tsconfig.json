{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "es2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noEmit": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/"
  ]
}
